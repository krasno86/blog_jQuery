%p#notice= notice
.header-content
  .header-content-inner
    %h1
      %span Post name:
      = @article.name
    %h2
      %span Text:
      = @article.text
    %textarea(cols = "50" rows = "4" placeholder = "Add new comment with JQuery:")
    %br
    %button.btn.btn-info#addComent(type="button")
      Add comment
    .coment_partial
      %br
      %textarea#partial.hidden(cols = "70" rows = "6" placeholder = "Add new comment with partial:")
      %button.btn.btn-success#createComent(type="button")
        Create comment with partial
    %h3.page-header Comments:
    .comments
      - @article.coments.each do |coment|
        %p.hidden(data-coment-id="#{coment.id}")= coment.id
        =render partial: '/coments/form', locals: {coment:coment}

%br
= link_to 'Edit', edit_article_path(@article)
|
= link_to 'Back', articles_path

