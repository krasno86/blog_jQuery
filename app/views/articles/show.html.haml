%p#notice= notice
.header-content
  .header-content-inner
    %h1
      %span Post name:
      = @article.name
    %h2
      %span Text:
      = @article.text
    %textarea(cols = "50" rows = "4" placeholder = "Enter new comment:")
    %br
    %button.btn.btn-info#addComent(type="button"8)
      Create comment
    %h3.page-header Comments:
    - @article.coments.each do |coment|
      %p.hidden(data-coment-id="#{coment.id}")= coment.id
      %p#text= coment.text
%br
= link_to 'Edit', edit_article_path(@article)
|
= link_to 'Back', articles_path

